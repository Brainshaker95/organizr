{
  "name": "organizr",
  "version": "0.0.1",
  "description": "A tool for organizing arbitrary data",
  "author": "Patrick Rupp",
  "license": "MIT",
  "type": "module",
  "main": "src/electron.cjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development yarn dev:all",
    "dev:all": "concurrently -n=svelte,electron -c=\"#ff3900\",\"#9feaf9\" \"yarn dev:svelte\" \"yarn dev:electron\"",
    "dev:svelte": "svelte-kit dev",
    "dev:electron": "electron src/electron.cjs",
    "build": "yarn check:svelte && yarn lint && cross-env NODE_ENV=production yarn build:svelte && yarn build:electron",
    "build:svelte": "svelte-kit build",
    "build:svelte:preview": "svelte-kit preview",
    "build:electron": "electron-builder -wl --config electron.config.cjs",
    "check:svelte": "svelte-check --tsconfig ./tsconfig.json",
    "check:svelte:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:css": "stylelint **/*.{css,scss,html,svelte}",
    "lint:js": "eslint --config eslint.config.cjs --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.11",
    "@sveltejs/kit": "^1.0.0-next.196",
    "@types/cookie": "^0.4.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "autoprefixer": "^10.3.7",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.8",
    "electron": "^16.0.1",
    "electron-builder": "^22.14.5",
    "electron-connect": "^0.6.3",
    "electron-packager": "^15.4.0",
    "electron-reloader": "^1.2.1",
    "electron-updater": "^4.6.1",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-svelte3": "^3.2.1",
    "postcss": "^8.3.9",
    "postcss-html": "^1.2.0",
    "postcss-load-config": "^3.1.0",
    "sass": "^1.43.4",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-scss": "^4.0.0",
    "svelte": "^3.44.2",
    "svelte-check": "^2.2.10",
    "svelte-preprocess": "^4.9.8",
    "tailwindcss": "^2.2.16",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@lukeed/uuid": "^2.0.0",
    "cookie": "^0.4.1",
    "electron-context-menu": "^3.1.1",
    "electron-serve": "^1.1.0",
    "electron-window-state": "^5.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brainshaker95/organizr.git"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
